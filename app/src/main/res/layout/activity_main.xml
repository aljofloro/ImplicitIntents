<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <Button
    android:id="@+id/btn_call"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@android:drawable/ic_menu_call"
    android:text="@string/custom_call"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.95" />

  <Button
    android:id="@+id/btn_location"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@android:drawable/ic_menu_myplaces"
    android:text="@string/custom_location"
    app:layout_constraintBottom_toTopOf="@+id/btn_call"
    app:layout_constraintEnd_toEndOf="@+id/btn_call"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="@+id/btn_call"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.963" />

  <Button
    android:id="@+id/btn_web"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@android:drawable/ic_menu_search"
    android:text="@string/custom_web"
    app:layout_constraintBottom_toTopOf="@+id/btn_location"
    app:layout_constraintEnd_toEndOf="@+id/btn_location"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="@+id/btn_location"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.946" />

  <Button
    android:id="@+id/btn_camera"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@android:drawable/ic_menu_camera"
    android:text="@string/custom_camera"
    app:layout_constraintBottom_toTopOf="@+id/btn_web"
    app:layout_constraintEnd_toEndOf="@+id/btn_web"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="@+id/btn_web"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.928" />

  <ImageView
    android:id="@+id/iv_picture"
    android:layout_width="192dp"
    android:layout_height="215dp"
    android:contentDescription="@string/custom_camera"
    app:layout_constraintBottom_toTopOf="@+id/btn_camera"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>